page {
  color: #666;
}

.nav_wrap {
}

.nav {
  white-space: nowrap;
  padding: 5rpx 0;
}

.nav_item {
  font-size: 30rpx;
  padding: 30rpx;
  display: inline-block;
}

.nav_item.active {
  border-bottom: 4rpx solid #de688b;
}

.video_wrap {
  display: flex;
  flex-wrap: wrap;
  padding: 5rpx;
  justify-content: space-between;
}

.video_item {
  width: 48%;
  margin-bottom: 20rpx;
}

.video_img {
  position: relative;
}

.video_img image {
  width: 100%;
  border-radius: 10rpx;
}

.video_img .video_info {
  position: absolute;
  bottom: 10rpx;
  left: 0;
  width: 100%;
  justify-content: space-around;
  display: flex;
  color: #fff;
  font-size: 24rpx;
}

.video_title {
  font-size: 26rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-wrap: break-word;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
